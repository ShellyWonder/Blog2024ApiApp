{
  "AllowedHosts": "*",

  //External OAuth Security
  "Authentication": {
    "Google": {
      "ClientId": "MY_GOOGLE_CLIENT_ID",
      "ClientSecret": "MY_GOOGLE_CLIENT_SECRET"
    },
    "GitHub": {
      "ClientId": "MY_GITHUB_CLIENT_ID",
      "ClientSecret": "MY_GITHUB_CLIENT_SECRET"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=.\\SQLEXPRESS;Initial Catalog=Blog2024Api;Integrated Security=True;TrustServerCertificate=True;"

  },
  "Jwt": {
    "Key": "YourSecretKeyHere",
    "Issuer": "YourIssuer"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "MailSettings": {
    "DisplayName": "Wonder Dev Blog",
    "Host": "smtp.gmail.com",
    "Mail": null,
    "Password": null,
    "Port": 587
  }
}